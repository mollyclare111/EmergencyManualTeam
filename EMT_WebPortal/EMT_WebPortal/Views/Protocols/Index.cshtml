@model IEnumerable<EMT_WebPortal.Models.Protocol>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-controller="Protocols" asp-action="Index">
    <p>
        Name: <input type="text" name="search" />
        <input type="submit" value="Search" />
    </p>
</form>


<p>
    <input type="button" onclick="location.href='@Url.Action("Create", "Protocols")'" value="Create New" class="btn btn-outline-success" />
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Certification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OtherInformation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TreatmentPlan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Certification)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientType)
                </td>
                <td>
                    @if (item.OtherInformation == null || item.OtherInformation.Length <= 100)
                    {
                        @Html.Raw(item.OtherInformation)
                    }
                    else
                    {
                        @Html.Raw(item.OtherInformation.ToString().Substring(0, 100) + "...")
                    }
                </td>
                <td>
                    @if (item.TreatmentPlan == null || item.TreatmentPlan.Length <= 100)
                    {
                        @Html.Raw(item.TreatmentPlan)
                    }
                    else
                    {
                        @Html.Raw(item.TreatmentPlan.ToString().Substring(0, 100) + "...")
                    }
                </td>

                <td>
                    @Html.ActionLink("Details", "Details", "Protocols", new { id = item.Id }, new { @class = "btn btn-outline-info", @style = "width:120px;" })
                    @if (User.IsInRole("Administrator") || User.IsInRole("Director"))
                    {
                        @Html.ActionLink("Edit", "Edit", "Protocols", new { id = item.Id }, new { @class = "btn btn-outline-primary", @style = "width:120px;" })
                        <button data-href="/Protocols/Delete/@item.Id" type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#confirmDelete" style="width:120px;">Delete</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="confirmDelete" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete Chart?</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this protocol?</p>
            </div>
            <div class="modal-footer" id="modalFooter">
                <button type="button" class="btn btn-outline-primary" data-dismiss="modal">No</button>
                <a id="deleteConfirmButton" class="btn btn-outline-danger">Yes</a>
            </div>
        </div>

    </div>
</div>

<script type="text/javascript" src="~/js/Delete.js"></script>
