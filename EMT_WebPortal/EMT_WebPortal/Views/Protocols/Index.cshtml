@model IEnumerable<EMT_WebPortal.Models.Protocol>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Certification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasAssociatedMedication)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OtherInformation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TreatmentPlan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guideline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OLMCRequired)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Certification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasAssociatedMedication)
            </td>
            <td>
                @if (item.OtherInformation == null || item.OtherInformation.Length <= 100)
                {
                    @Html.Raw(item.OtherInformation)
                }
                else
                {
                    @Html.Raw(item.OtherInformation.ToString().Substring(0,100) + "..." + "</p>")
                }
            </td>
            <td>
                @if (item.TreatmentPlan == null || item.TreatmentPlan.Length <= 100)
                {
                    @Html.Raw(item.TreatmentPlan)
                }
                else
                {
                    @Html.Raw(item.TreatmentPlan.ToString().Substring(0,100) + "..." + "</p>")
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guideline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OLMCRequired)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
