@model IEnumerable<EMT_WebPortal.Models.Protocol>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Certification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OtherInformation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TreatmentPlan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Certification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientType)
            </td>
            <td>
                @if (item.OtherInformation == null || item.OtherInformation.Length <= 100)
                {
                    @Html.Raw(item.OtherInformation)
                }
                else
                {
                    @Html.Raw(item.OtherInformation.ToString().Substring(0,100) + "...")
                }
            </td>
            <td>
                @if (item.TreatmentPlan == null || item.TreatmentPlan.Length <= 100)
                {
                    @Html.Raw(item.TreatmentPlan)
                }
                else
                {
                    @Html.Raw(item.TreatmentPlan.ToString().Substring(0, 100) + "...")
                }
            </td>

            <td>
                @Html.ActionLink("Details", "Details", "Protocols", new { id = item.ID }, new { @class = "btn btn-outline-info" })
                @if (User.IsInRole("Administrator") || User.IsInRole("Director"))
                {
                    @Html.ActionLink("Edit", "Edit", "Protocols", new { id = item.ID }, new { @class = "btn btn-outline-primary" })
                    @Html.ActionLink("Delete", "Delete", "Protocols", new { id = item.ID }, new { @class = "btn btn-outline-danger" })
                }
            </td>
        </tr>
}
    </tbody>
</table>
