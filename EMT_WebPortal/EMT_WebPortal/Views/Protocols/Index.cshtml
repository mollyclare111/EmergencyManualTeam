
@section Head{ 
    <link rel="stylesheet" type="text/css" href="~/css/ProtocolCards.css"/>
}
<h1>Index</h1>

<form asp-controller="Protocols" asp-action="Index">
    <p>
        Name: <input type="text" name="search" />
        <input type="submit" value="Search" />
    </p>
</form>

@foreach (Protocol pro in Model)
{
    <p class="protocol-name" style="display:none">@pro.Name</p>
    <p class="protocol-Cert" style="display:none">@pro.Certification</p>
    <p class="protocol-Patient" style="display:none">@pro.PatientType</p>
}

<input type="button" onclick="location.href='@Url.Action("Create", "Protocols")'" value="Create New" class="btn btn-outline-success" />
<div id="tableContainer" class="container card-table">
    <div id="cardTable" class="row"></div>

</div>

<div id="confirmDelete" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete Chart?</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this protocol?</p>
            </div>
            <div class="modal-footer" id="modalFooter">
                <button type="button" class="btn btn-outline-primary" data-dismiss="modal">No</button>
                <a id="deleteConfirmButton" class="btn btn-outline-danger">Yes</a>
            </div>
        </div>

    </div>
</div>

<script type="text/javascript" src="~/js/Delete.js"></script>
<script type="text/javascript" src="~/js/protocolCards.js"></script>
