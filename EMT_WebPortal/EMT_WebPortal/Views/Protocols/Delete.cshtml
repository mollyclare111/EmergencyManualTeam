    Description: This is the view for the delete page of an individual protocol. This page contains razor
    code to display certain information from the database. Since Authorization has already been performed
    several times to reach this page, all links are displayed.
-->
@model EMT_WebPortal.Models.Protocol

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Protocol</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Certification)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Certification)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PatientType)
        </dt>
        <dd class="col-sm-10">
            @{
                int patientType = Model.PatientType;
                if (patientType == 1)
                {
                    string displayText = "All"; @Html.DisplayFor(model => displayText) }
                else if (patientType == 2)
                {
                    string displayText = "Adult"; @Html.DisplayFor(model => displayText) }
                else
                {
                    string displayText = "Pediatric"; @Html.DisplayFor(model => displayText) }
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HasAssociatedMedication)
        </dt>
        <dd class="col-sm-10">
            @{if (Model.HasAssociatedMedication)
                {
                    string displayText = " : Yes";
                    @Html.DisplayFor(model => displayText)
                }
                else
                {
                    string displayText = " : No";
                    @Html.DisplayFor(model => displayText)
                }
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OtherInformation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OtherInformation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TreatmentPlan)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TreatmentPlan)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Guideline)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Guideline.Name)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
