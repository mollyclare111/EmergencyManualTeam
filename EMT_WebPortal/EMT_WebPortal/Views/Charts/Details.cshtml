@model EMT_WebPortal.Models.Chart

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Chart</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class="col-sm-10">
            <img src="data:image;base64,@System.Convert.ToBase64String(Model.Photo)" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsQuickLink)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsQuickLink)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Protocol)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Protocol)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-2">
        <input style="width:100%" type="button" value="Back To List" class="btn btn-danger" onclick="location.href='@Url.Action("Index","Charts")'" />
    </div>
</div>
