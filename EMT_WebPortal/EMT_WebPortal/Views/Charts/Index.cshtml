@using System.Drawing;
@using System.IO;
@model IEnumerable<EMT_WebPortal.Models.Chart>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsQuickLink)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img src="data:image;base64,@System.Convert.ToBase64String(item.Photo)" width="80" height="80" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsQuickLink)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", "Medications", new { id = item.ID }, new { @class = "btn btn-outline-info" })
                @if (User.IsInRole("Administrator") || User.IsInRole("Director"))
                {
                    @Html.ActionLink("Delete", "Delete", "Medications", new { id = item.ID }, new { @class = "btn btn-outline-danger" })
                }
            </td>
        </tr>
}
    </tbody>
</table>
