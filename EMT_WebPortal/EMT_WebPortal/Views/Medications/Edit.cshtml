@model EMT_WebPortal.Models.Medication

@{
    ViewData["Title"] = "Edit";
}
@section Head {
    <script type="text/javascript">
        tinymce.init({ selector: '#IndicationArea' });
        tinymce.init({ selector: '#ContraindicationArea' });
        tinymce.init({ selector: '#PrecautionArea' });
        tinymce.init({ selector: '#AdverseArea' });
        tinymce.init({ selector: '#ActionArea' });
    </script>
}

<h1>Edit</h1>

<h4>Medication</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Action" class="control-label"></label>
                <textarea id="ActionArea" rows="10" cols="250" style="width:600px;" asp-for="Action" class="form-control block-display"></textarea>
                <span asp-validation-for="Action" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Indication" class="control-label"></label>
                <textarea id="IndicationArea" rows="10" cols="250" style="width:600px;" asp-for="Indication" class="form-control block-display"></textarea>
                <span asp-validation-for="Indication" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contraindication" class="control-label"></label>
                <textarea id="ContraindicationArea" rows="10" cols="250" style="width:600px;" asp-for="Contraindication" class="form-control block-display"></textarea>
                <span asp-validation-for="Contraindication" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precaution" class="control-label"></label>
                <textarea id="PrecautionArea" rows="10" cols="250" style="width:600px;" asp-for="Precaution" class="form-control block-display"></textarea>
                <span asp-validation-for="Precaution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdverseEffects" class="control-label"></label>
                <textarea id="AdverseArea" rows="10" cols="250" style="width:600px;" asp-for="AdverseEffects" class="form-control block-display"></textarea>
                <span asp-validation-for="AdverseEffects" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdultDosage" class="control-label"></label>
                <input asp-for="AdultDosage" class="form-control" />
                <span asp-validation-for="AdultDosage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChildDosage" class="control-label"></label>
                <input asp-for="ChildDosage" class="form-control" />
                <span asp-validation-for="ChildDosage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
