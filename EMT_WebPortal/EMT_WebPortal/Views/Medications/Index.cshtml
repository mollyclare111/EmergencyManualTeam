@model IEnumerable<EMT_WebPortal.Models.Medication>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @if (User.IsInRole("Administrator") || User.IsInRole("WebMaster"))
    {  
        <a asp-action="Create">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Action)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Indication)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contraindication)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precaution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdverseEffects)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdultDosage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChildDosage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Action)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Indication)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contraindication)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precaution)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdverseEffects)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdultDosage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChildDosage)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", "Medications", new { id = item.ID }, new { @class = "btn btn-outline-info" })
                @if (User.IsInRole("Administrator") || User.IsInRole("Director"))
                {
                    @Html.ActionLink("Edit", "Edit", "Medications", new { id = item.ID }, new { @class = "btn btn-outline-primary" })
                    @Html.ActionLink("Delete", "Delete", "Medications", new { id = item.ID }, new { @class = "btn btn-outline-danger" })
                }
            </td>
        </tr>
}
    </tbody>
</table>
