@model EMT_WebPortal.Models.PhoneNumber

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit: @Model.hospitalName</h1>

<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="hospitalName" class="control-label">Hospital Name</label>
                <input asp-for="hospitalName" class="form-control" />
                <span asp-validation-for="hospitalName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="numberString" class="control-label">Phone Number</label>
                <input asp-for="numberString" class="form-control" />
                <span asp-validation-for="numberString" class="text-danger"></span>
            </div>
            <div class="row form-group">
                <div class="col-2">
                    <input type="submit" style="width:100%" value="Save" class="btn btn-primary" />
                </div>
                <div class="col-2">
                    <input type="button" style="width:100%" value="Back to List" class="btn btn-danger" onclick="location.href='@Url.Action("Index","PhoneNumbers")'" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
