@model EMT_WebPortal.Models.Guideline

@{
    ViewData["Title"] = "Edit";
}
@section Head {
    <script type="text/javascript">
        tinymce.init({ selector: '#BackgroundArea' });
        tinymce.init({ selector: '#ChecklistArea' });
    </script>
}
<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<h1>Edit: @Model.Name</h1>

<h4>Guideline</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Background" class="control-label block-display"></label>
                <textarea id="BackgroundArea" rows="10" cols="250" style="width:100%;" asp-for="Background" class="form-control block-display"></textarea>
                <span asp-validation-for="Background" class="text-danger block-display"></span>
            </div>
            <div class="form-group">
                <label asp-for="Checklist" class="control-label block-display"></label>
                <textarea id="ChecklistArea" rows="10" cols="250" style="width:100%;" asp-for="Checklist" class="form-control block-display"></textarea>
                <span asp-validation-for="Checklist" class="text-danger block-display"></span>
            </div>
            <div class="row" style="justify-content:left">
                <div class="col-2">
                    <input style="width:100%" type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div class="col-2">
                    <input style="width:100%" type="button" value="Back To List" class="btn btn-danger" onclick="location.href='@Url.Action("Index","Guidelines")'" />
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
