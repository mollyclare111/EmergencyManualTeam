@model EMT_WebPortal.Models.Guideline

@{
    ViewData["Title"] = "Edit";
}
@section Head {
    <script type="text/javascript">
        tinymce.init({ selector: '#BackgroundArea' });
        tinymce.init({ selector: '#ChecklistArea' });
    </script>
}
<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<h1>Edit</h1>

<h4>Guideline</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Background" class="control-label block-display"></label>
                <textarea id="BackgroundArea" rows="10" cols="250" style="width:600px;" asp-for="Background" class="form-control block-display"></textarea>
                <span asp-validation-for="Background" class="text-danger block-display"></span>
            </div>
            <div class="form-group">
                <label asp-for="Checklist" class="control-label block-display"></label>
                <textarea id="ChecklistArea" rows="10" cols="250" style="width:600px;" asp-for="Checklist" class="form-control block-display"></textarea>
                <span asp-validation-for="Checklist" class="text-danger block-display"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
